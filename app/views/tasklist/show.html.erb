<div class="container">
	<div class="tasklist">
		<h1 class="title"><%= @tasklist.title %></h1>
		<p class="created">Created <%= time_ago_in_words(@tasklist.created_at) %> ago</p>
		<div>
			<h2 class="counter"><%= @tasklist.tasks.count %> Tasks </h2>
			<div class="list">	<%= render @tasklist.tasks %></div>
		</div>
		<div class="newtask">
			<h3>Add New Task</h3>
			<%= render "tasks/form"%>
		</div>
	</div>

	<div class="row">
		<div class="bottombuttons">
			<div class="col-md-6 col-md-offset-3">
				<%= link_to "Back", tasklist_index_path, class: "btn btn-default" %>
				<%= link_to "Edit", edit_tasklist_path, class: "btn btn-default" %>
				<%= link_to "Delete", tasklist_path, method: :delete, data: {confirm: "Are you sure you want to delete this list?"}, class: "btn btn-default" %>
			</div>
		</div>
	</div>
</div>